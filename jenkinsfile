
pipeline {
agent none
stages {
stage('Docker Build') {
agent any
steps {
sh 'docker build . -t hellowhale'
sh 'docker tag hellowhale rrr/hellowhale'
}
}
stage('Docker Push') {
agent any
steps {
withCredentials([usernamePassword(credentialsId: 'dockerhub', passwordVariable: 'dockerHubPassword', usernameVariable: 'dockerHubUser')]) {
sh "docker login -u ${env.dockerHubUser} -p ${env.dockerHubPassword}"
sh 'docker push rrr/hellowhale:latest'
}
}
}
stage('Deploy New Build To Kubernetes') {
	    agent any
	    steps{
		   
		    sh 'kubectl delete deployments hellowhale'
		    sh 'kubectl delete services hellowhale'
		    sh 'docker pull rrr/hellowhale:latest'
		    sh 'kubectl create deployment hellowhale --image rrr/hellowhale' 
		    sh 'kubectl set image deployment/hellowhale hellowhale=rrr/hellowhale:latest'
		    sh 'kubectl create service nodeport hellowhale --tcp=80:80'
		    sh 'kubectl get services'
	    }
      }
  }
}
